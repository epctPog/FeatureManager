<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="Grey0">#FF000000</Color>
    <Color x:Key="Grey10">#FF1A1A1A</Color>
    <Color x:Key="Grey20">#FF2A2A2A</Color>
    <Color x:Key="Grey30">#FF3A3A3A</Color>
    <Color x:Key="Grey40">#FF4A4A4A</Color>
    <Color x:Key="Grey50">#FF606060</Color>
    <Color x:Key="Grey60">#FF808080</Color>
    <Color x:Key="Grey70">#FFA0A0A0</Color>
    <Color x:Key="Grey80">#FFB8B8B8</Color>
    <Color x:Key="Grey90">#FFD0D0D0</Color>
    <Color x:Key="Grey100">#FFFFFFFF</Color>
	
	<Color x:Key="Yellow10">#FFFFFBEB</Color>
	<!-- Sehr helles Gelb -->
	<Color x:Key="Yellow20">#FFFCE588</Color>
	<!-- Hellgelb -->
	<Color x:Key="Yellow30">#FFF9D342</Color>
	<!-- Leuchtendes Gelb -->
	<Color x:Key="Yellow40">#FFF7C600</Color>
	<!-- Sattes Goldgelb -->
	<Color x:Key="Yellow50">#FFCDAA00</Color>
	<!-- Dunkleres Gelb/Gold -->
	<Color x:Key="Yellow60">#FFB38E00</Color>
	<!-- Bernstein-Ton -->
	<Color x:Key="Yellow70">#FF997A00</Color>
	<!-- Warmes Honiggelb -->
	<Color x:Key="Yellow80">#FF7F6000</Color>
	<!-- Braun-gelb -->
	<Color x:Key="Yellow90">#FF664D00</Color>
	<!-- Dunkles Goldbraun -->
	<Color x:Key="Yellow100">#FF4D3B00</Color>
	<!-- Sehr dunkel, fast Ocker -->

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Grey10}"/>
    <SolidColorBrush x:Key="GroundBrush" Color="{StaticResource Grey80}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource Grey50}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Yellow60}"/>
	<SolidColorBrush x:Key="SuperColorBrush" Color="{StaticResource Yellow80}"/>
</ResourceDictionary>